<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/menu_home_second_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_default"
        android:background="@color/colorBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >
        <ImageView
            android:id="@+id/menu_home_second_icon_iv"
            android:layout_width="@dimen/size_icon_default"
            android:layout_height="@dimen/size_icon_default"
            android:src="@drawable/icon_car_map"
            android:layout_centerVertical="true" />
        <TextView
            style="@style/DefaultTextView.Detail"
            android:id="@+id/menu_home_second_name_tv"
            android:text="Demo"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_toEndOf="@id/menu_home_second_icon_iv"/>
        <TextView
            style="@style/DefaultTextView.Detail"
            android:id="@+id/menu_home_second_address_tv"
            android:text="asdfgh"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_toEndOf="@id/menu_home_second_icon_iv"
            android:layout_below="@id/menu_home_second_name_tv"/>
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        style="@style/DefaultButton"
        android:id="@+id/menu_home_second_add_btn"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/margin_default"
        android:layout_marginHorizontal="@dimen/margin_default"
        android:text="@string/common_add"
        app:icon="@drawable/ic_add"
        app:iconSize="@dimen/_16ssp"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
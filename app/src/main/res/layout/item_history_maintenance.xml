<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorTransparent"
    android:id="@+id/item_rl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="@dimen/_21ssp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_history_maintenance_dot"
                android:layout_width="@dimen/size_medium"
                android:layout_height="@dimen/size_medium"
                android:layout_centerInParent="true"
                android:background="@drawable/dot_circle"
                android:backgroundTint="@color/green"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            style="@style/DefaultCardView"
            android:layout_marginVertical="@dimen/margin_default"
            app:contentPadding="0dp"
            app:cardCornerRadius="@dimen/radius_small">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/size_icon_default"
                    android:layout_height="@dimen/size_icon_default"
                    android:layout_marginHorizontal="@dimen/margin_small"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/textColorDefault" />

                <TextView
                    style="@style/DefaultTextView.Detail"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:id="@+id/item_history_maintenance_text"
                    tools:text="2023-04-30 (Đã bảo trì)"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>
